  "scripts": {
    "ci": "npm ci && npm run back:main -- npm ci && concurrently \"npm run back:*(!main) -- npm ci\" && npm run mocks -- npm ci && npm run front -- npm ci && concurrently \"npm run connector:* -- npm ci\"",
    "build:back": "npm run back:main -- npm ci && concurrently \"npm run back:*(!main) -- npm ci\" && concurrently \"npm run back:* -- npm run build\"",
    "build:front": "npm run front -- npm ci && npm run front -- npm run module:build-all",
    "build:mocks": "npm run mocks -- npm ci",
    "start:back": "concurrently \"npm run back:* -- npm run start\"",
    "start:back:dev": "concurrently \"npm run back:* -- npm run start:dev\"",
    "start:front": "npm run front -- ionic serve",
    "start:mocks": "npm run mocks -- npm start",
    "front": "cd dev/user-frontend-ionic && ",
    "mocks": "cd dev/user-backend-mocks && ",
    "back:main": "cd dev/user-backend-nest/main && ",
    "back:auth": "cd dev/user-backend-nest/microservices/auth && ",
    "back:cards": "cd dev/user-backend-nest/microservices/cards && ",
    "back:chatbot": "cd dev/user-backend-nest/microservices/chatbot && ",
    "back:clocking": "cd dev/user-backend-nest/microservices/clocking && ",
    "back:contact-us": "cd dev/user-backend-nest/microservices/contact-us && ",
    "back:contacts": "cd dev/user-backend-nest/microservices/contacts && ",
    "back:features": "cd dev/user-backend-nest/microservices/features && ",
    "back:important-news": "cd dev/user-backend-nest/microservices/important-news && ",
    "back:mail-calendar": "cd dev/user-backend-nest/microservices/mail-calendar && ",
    "back:map": "cd dev/user-backend-nest/microservices/map && ",
    "back:notifications": "cd dev/user-backend-nest/microservices/notifications && ",
    "back:restaurants": "cd dev/user-backend-nest/microservices/restaurants && ",
    "back:rss": "cd dev/user-backend-nest/microservices/rss && ",
    "back:schedule": "cd dev/user-backend-nest/microservices/schedule && ",
    "back:social-network": "cd dev/user-backend-nest/microservices/social-network && ",
    "back:static-pages": "cd dev/user-backend-nest/microservices/static-pages && ",
    "back:statistics": "cd dev/user-backend-nest/microservices/statistics && ",
    "connector:multi-cms-connector": "cd dev/connectors/multi-cms-connector && "
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.0.10",
    "license-checker-rseidelsohn": "^4.3.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
